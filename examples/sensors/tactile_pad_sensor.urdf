<?xml version="1.0"?>
<robot name="tactile_sensor_pad">

  <!-- Base sensor body (rigid) -->
  <link name="sensor_base">
    <visual>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.01"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0"
               iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Soft elastomer pad layer (this is where we apply soft compliance) -->
  <!-- Use prismatic joint with tight limits to preserve link separation -->
  <joint name="elastomer_joint" type="prismatic">
    <parent link="sensor_base"/>
    <child link="elastomer_pad"/>
    <origin xyz="0 0 0.01" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" velocity="0.01" lower="-0.0001" upper="0.0001"/>
    <dynamics damping="100.0" friction="0.0"/>
  </joint>

  <link name="elastomer_pad">
    <visual>
      <origin xyz="0 0 0.0025" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.005"/>
      </geometry>
      <material name="blue">
        <color rgba="0.3 0.5 1.0 0.7"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.0025" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.005"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.0025" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia ixx="1e-6" ixy="0" ixz="0"
               iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
  </link>

  <!-- Elastomer tip frame (massless reference for tactile points) -->
  <!-- Use prismatic joint with tight limits to preserve link separation -->
  <joint name="elastomer_tip_joint" type="prismatic">
    <parent link="sensor_base"/>
    <child link="elastomer_tip"/>
    <origin xyz="0 0 0.015" rpy="0 0 0"/>  <!-- Top surface of elastomer -->
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" velocity="0.01" lower="-0.0001" upper="0.0001"/>
    <dynamics damping="100.0" friction="0.0"/>
  </joint>

  <link name="elastomer_tip">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1e-6"/>
      <inertia ixx="1e-9" ixy="0" ixz="0"
               iyy="1e-9" iyz="0" izz="1e-9"/>
    </inertial>
  </link>

</robot>
